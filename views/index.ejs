<!DOCTYPE html>
<html>
  <head>
    <title>Curd</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href='/stylesheets/bootstrap.min.css'>
  </head>
  <style type="text/css">
  	header{
  		width: 100%;
  		height: 80px;
  		background-color: orange;
  		margin-top: -20px;
  	}
  	.btn-lg{
  		margin-top:5px;
  	}
      .text-center{
          line-height: 30px !important;
      }
      .search{
          /*background-color: red;*/
          float: right;
          margin-right: 30px;
          margin-top: 5px;
      }
  </style>
  <body>
  	<header>
  		<h1 style="line-height: 80px;"><%= title %></h1>
  	</header>
    <span class="search">
        <form action="/search" method="get">
            <input type="text" name="keyword" placeholder="请输入要搜索的关键字" class="search">
        </form>
    </span>
    <a href="/add" class="btn btn-primary btn-lg pull-right" >添加</a>
    <div class="table-responsive">
        <table class="table table-hover">
            <tr>
                <th class="text-center">姓名</th>
                <th class="text-center">年龄</th>
                <th class="text-center">性别</th>
                <th class="text-center">号码</th>
                <th class="text-center">邮箱</th>
                <th class="text-center">备注</th>
                <th class="text-center">编辑</th>
                <th class="text-center">删除</th>
            </tr>
            <% docs.forEach(function(doc){ %>
                <tr>
                    <th class="text-center"><%= doc.name %></th>
                    <th class="text-center"><%= doc.age %></th>
                    <th class="text-center"><%= doc.gender=="男" ? "男" : "女"%></th>
                    <th class="text-center"><%= doc.phone %></th>
                    <th class="text-center"><%= doc.email %></th>
                    <th class="text-center"><%= doc.detail %></th>
                    <th class="text-center">
                        <a href="/edit/<%= doc.name %>/<%= doc.age %>">
                            <button class="btn btn-danger">编辑</button>
                        </a>
                    </th>
                    <th class="text-center">
                        <a class="edit" href="/remove/<%= doc.name %>/<%= doc.age %>/<%= doc.gender %>/<%= doc.phone %>/<%= doc.email %>/<%= doc.detail %>">
                            <button class="btn btn-success">删除</button>
                        </a>
                    </th>
                </tr>
            <% }) %>
        </table>
    </div>

  </body>
</html>
<script src="http://cdn.static.runoob.com/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/js/bootstrap.min.js"></script>

